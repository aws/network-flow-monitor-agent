#!/bin/bash

source bin/set-env-vars

# Send a SIGINT to the NFM agent, allowing flamegraph to write out its image.
log "${ORANGE}Sending SIGINT to NFM agent${NC}"
pkill -2 -f network-flow-monitor-agent || true

log "${ORANGE}Sending SIGTERM to all other processes${NC}"
# Send a SIGTERM to all other processes associated with our load test.
pkill -15 -f 'bpftool|bpftop|mpstat|pidstat|poll-|tcp-tester' || true
